<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="[%d{HH:mm:ss}] [%level] [%logger{36}]: %msg%n"/>
        </Console>
    </Appenders>

    <Loggers>
        <!-- Keep everything under your mod package -->
        <Logger name="com.chaos.magicmod" level="debug" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
    </Loggers>

    <!-- Completely silence root (Minecraft, NeoForge, other mods) -->
    <Root level="off"/>
</Configuration>
